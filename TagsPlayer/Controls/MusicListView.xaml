<UserControl x:Class="TagsPlayer.Controls.MusicListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TagsPlayer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="ItemStyle" TargetType="ListViewItem">
            <Setter Property="Height" Value="20" />
            <Setter Property="BorderThickness" Value="0" />

            <Setter Property="ContextMenu">
                <Setter.Value>
                    <ContextMenu>
                        <MenuItem Header="删除源文件" Click="MenuItemDelete_Click" />
                        <MenuItem Header="打开所在文件夹" Click="MenuItemOpenFolder_Click" />
                    </ContextMenu>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    

    <Grid>
        <ListView ItemContainerStyle="{StaticResource ItemStyle}" />
    </Grid>
</UserControl>
